<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>
<body>
    <div class="container">
        <tbody>
            <hr>    
            <!--Repare que aqui tive que colocar result.articles.rows(o articles esta dentro do result)-->
            <% result.articles.rows.forEach(article=> { %>
                <div class="card">
                    <div class="card-header">
                        <h3><small> <%= article.title %> </h2></small>  
                    </div>
                    <div class="card-body">
                        <a href="/<%= article.slug %>" class="btn btn-outline-dark">Read the article</a>
                    </div>
                </div>
                <br>
                <% }) %>

                
                <div class="row">
                    <div class="col col-12">
                        <!-- Pagina anterior -->
                        <% if(result.page > 2) { %>
                            <a href="/articles/page/<%= result.page -1 %>" class="btn btn-dark" style="float: left">Previous page</a>                         
                            <% } else if(result.page == 2) { %>
                                <a href="/" class="btn btn-dark" style="float: left">Previous page</a>                         
                        <% } %>

                        <!-- Proxima pagina -->
                        <% if(result.next) { %>
                        <a href="/articles/page/<%= result.page + 1 %>" class="btn btn-dark" style="float: right">Next page</a>
                        <% } %>
                    </div>
                </div>
                <hr>
    </div>
</body>
<%- include('../../partials/footer.ejs') %>
