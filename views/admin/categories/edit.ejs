    <%- include('../../partials/navbar.ejs') %>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h2>Change category data</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/categories/update">
                        <input class="form-control" type="text" name="title" placeholder="Change category data"
                            value="<%= category.title %>"><br>
                        <input type="hidden" name="id" value="<%= category.id %>">
                        <button type="submit" class="btn btn-success">Update</button>
                    </form>
                </div>
            </div>
        </div>

